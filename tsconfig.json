{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es6"],
    "module": "NodeNext",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "removeComments": true,
    "listFiles": false,
    "outDir": "./lib",
    "rootDir": "./src",
    "moduleResolution": "nodenext"
  },
  "compileOnSave": true,
  //Include the eslintrc file, as eslint uses the typescript parser, and it'll fail when it tries to lint itself
  "include": ["src/**/*.ts", ".eslintrc.cjs"]
}
